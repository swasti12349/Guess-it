<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/gameic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/gameic"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.GuessIt"
        tools:targetApi="31">
        <activity
            android:name=".Activity.GuessTheGameActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.CatActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ContactActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.GameActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.LevelActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/appid" />

        <service
            android:name=".Service.MusicService"
            android:enabled="true" />
    </application>

</manifest>