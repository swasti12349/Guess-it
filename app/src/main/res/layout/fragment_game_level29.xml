<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".Activity.GameActivity">

    <TextView
        android:id="@+id/adwatchtxt"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adwatch"
        android:layout_marginStart="@dimen/_82sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Earn hints"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="end"
        android:padding="@dimen/_10sdp"
        android:text="0:0"
        android:textColor="@color/black"
        android:textSize="@dimen/_30ssp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/adwatch"
        android:layout_width="@dimen/_40sdp"
        android:visibility="invisible"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_toRightOf="@+id/hint"
        android:src="@drawable/video" />

    <ImageView
        android:id="@+id/hint"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:src="@drawable/lightbulb" />

    <TextView
        android:id="@+id/hintbal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hint"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Hint: 10"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:text="It can't be seen, can't be felt, can't be heard, and can't be smelt. It lies behind stars and under hills, And empty holes it fills. It comes first and follows after, Ends life, and kills laughter. What is it?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="158dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_60sdp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed1"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:editable="false"

            android:gravity="center"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:padding="8dp"
            android:text="D"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:maxLength="1"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/ed3"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:maxLength="1"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed4"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="textCapCharacters"
            android:maxLength="1"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <include
        android:id="@+id/hintl"
        layout="@layout/hintlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_40sdp"
        android:visibility="invisible" />
</RelativeLayout>