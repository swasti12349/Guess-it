<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/yellow">

    <TextView
        android:id="@+id/pooltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:fontFamily="@font/gamingfont"
        android:padding="@dimen/_2sdp"
        android:text="Use letters from below"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pooltext"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/letters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A B F H R T D G E Y L"

            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_26ssp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/revealanswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="@drawable/backcircle"
            android:padding="@dimen/_10sdp"
            android:text="Reveal Answer"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="Click on the above button"
            android:textColor="@color/black"
            android:textStyle="italic" />

    </LinearLayout>


</RelativeLayout>